{% trans_default_domain 'App' %}
<table class="table table-bordered table-responsive-md w-100" id="grupa_obiektow-tabela">
    <thead class="thead-dark">
    <tr>
        <th>#</th>
        <th>{{ 'Nazwa'|trans }}</th>
        <th>{{ 'Symbol'|trans }}</th>
        <th>{{ 'Akcje'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for grupa in lista %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ grupa.nazwa }}</td>
            <td>{{ grupa.symbol }}</td>
            <td>
                <button class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-fw fa-cogs"></i></button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="javascript:void(0)" onclick="Edytuj({{ grupa.id }})">
                        <i class="fas fa-fw fa-edit"></i>
                        {{ 'Edytuj'|trans }}
                    </a>
                    <a class="dropdown-item" href="javascript:void(0)" onclick="Usun({{ grupa.id }})">
                        <i class="fas fa-fw fa-trash"></i>
                        {{ 'Usun'|trans }}
                    </a>
                    <a class="dropdown-item" href="javascript:void(0)" onclick="Szczegoly({{ grupa.id }})">
                        <i class="fas fa-fw fa-info"></i>
                        {{ 'Szczegoly'|trans }}
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<script>
    $("#grupa_obiektow-tabela").DataTable();
</script>