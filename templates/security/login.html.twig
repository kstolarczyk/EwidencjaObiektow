{% extends 'base.html.twig' %}
{% trans_default_domain 'App' %}
{% block title %}{{ 'Zaloguj.sie'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header p-0">
                        <h3 class="text-center font-weight-light my-4">{{ 'Logowanie'|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    {{ 'Jestes.zalogowany.jako'|trans }} {{ app.user.username }},
                                    <a href="{{ path('app_logout') }}">{{ 'Wyloguj'|trans }}</a>
                                </div>
                            {% endif %}

                            <div class="form-group">
                                <label class="small mb-1" for="inputUsername">{{ 'Nazwa.uzytkownika'|trans }}</label>
                                <input class="form-control py-4" value="{{ last_username }}" name="username" id="inputUsername" required autofocus placeholder="{{ 'Wprowadz.uzytkownika'|trans }}"/>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputPassword">{{ 'Haslo'|trans }}</label>
                                <input class="form-control py-4" id="inputPassword" type="password" name="password" placeholder="{{ 'Wprowadz.haslo'|trans }}"/>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="rememberPasswordCheck" name="_remember_me" type="checkbox"/>
                                    <label class="custom-control-label" for="rememberPasswordCheck">{{ 'Zapamietaj.haslo'|trans }}</label>
                                </div>
                            </div>
                            <div class="d-flex mt-4 mb-0">
                                <button class="btn btn-primary btn-lg flex-grow-1" type="submit">{{ 'Zaloguj'|trans }}</button>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="small"><a href="{{ path('password_request') }}">{{ 'Zapomniales.hasla'|trans }}</a>
                        </div>
                        <div class="small">
                            <a href="{{ path('app_register') }}">{{ 'Nie.masz.konta.zarejestruj.sie'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
