{% extends 'base.html.twig' %}
{% trans_default_domain 'App' %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header pt-0">
                        <h3 class="text-center font-weight-light my-4">{{ 'Odzyskiwanie.hasla'|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="small mb-3 text-muted">{{ 'Wprowadz.adres.email.wyslemy.link.do.resetu'|trans }}</div>
                        <form method="post">
                            <div class="form-group">
                                <label class="small mb-1" for="inputEmailAddress">Email</label>
                                <input class="form-control py-4" name="password_request[email]" id="inputEmailAddress" type="email" aria-describedby="emailHelp" placeholder="Enter email address"/>
                            </div>
                            <div class="d-flex mt-4 mb-0">
                                <button type="submit" class="btn btn-primary btn-lg flex-grow-1">{{ 'Wyslij'|trans }}</button>
                            </div>
                            {{ form_row(form._token) }}
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <div class="small"><a href="{{ path('app_login') }}">{{ 'Powrot.do.logowania'|trans }}</a>
                        </div>
                        <div class="small">
                            <a href="{{ path('app_register') }}">{{ 'Nie.masz.konta.zarejestruj'|trans }}</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}